<h1>Listing posts</h1>

<table>
  <tr>
    <th>To name</th>
    <th>To email</th>
    <th>From name</th>
    <th>From email</th>
    <th>Subject</th>
    <th>Text Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.to_name %></td>
    <td><%= post.to_email %></td>
    <td><%= post.from_name %></td>
    <td><%= post.from_email %></td>
    <td><%= post.subject %></td>
    <td><%= post.text_body %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
